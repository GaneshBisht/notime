<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="horizontal">

	<LinearLayout android:orientation="vertical"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_gravity="center">

		<TextView android:id="@+id/message" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="0"
			android:paddingBottom="1dip" />

		<TextView android:id="@+id/location" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="0"
			android:paddingBottom="1dip" />

		<TextView android:id="@+id/suggestions" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="0"
			android:paddingBottom="1dip" android:text="Suggestions: " />

		<RadioGroup android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:id="@+id/group1">

			<RadioButton android:checked="false" android:id="@+id/option1" />
			<RadioButton android:checked="false" android:id="@+id/option2" />

			<RadioButton android:checked="false" android:text="NotiMe"
				android:id="@+id/timebefore" />
			<RelativeLayout android:id="@+id/widget76"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true">

				<EditText android:id="@+id/Minutes" android:layout_height="wrap_content"
					android:width="25pt" android:layout_width="25pt" android:text=" 10"
					android:layout_toRightOf="@+id/Snooze" android:inputType="number"></EditText>
				<Button android:id="@+id/errPlus" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="+"
					android:width="30pt" android:layout_toRightOf="@+id/Minutes"></Button>
				<Button android:id="@+id/errMinus" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="-"
					android:width="30pt" android:layout_toRightOf="@+id/errPlus"></Button>
				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="minutes before"
					android:layout_toRightOf="@+id/errMinus"
					android:layout_alignBottom="@+id/errMinus" />
			</RelativeLayout>
			
			<RadioButton android:checked="false"
				android:text="Dismiss NotiMe for this event" android:id="@+id/dismiss" />
		</RadioGroup>

		<RelativeLayout android:id="@+id/widget76"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerVertical="true" android:layout_centerHorizontal="true">

			<Button android:id="@+id/errnotifyok" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/ok"
				android:width="30pt">
			</Button>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>